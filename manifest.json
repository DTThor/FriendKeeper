{
  "manifest_version": 2,

  "name": "FriendKeeper",
  "description": "FriendKeeper desktop notifications",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "FriendKeeper",
    "default_icon": {
      "16": "/public/favicon-16x16.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "http://localhost/*"
  ],
  "background": {
     "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "icon.jpg"
  ]
}
